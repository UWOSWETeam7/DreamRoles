<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prototypes.UI.AddSongForPerformerPopUp"
             Title="AddSongForPerformerPopUp">
    <VerticalStackLayout>
        <Grid RowDefinitions="*,*,*" ColumnDefinitions="*,2.5*">
            <Label Grid.Row="0" Grid.Column="0" Text="Song Name:"/>
            <Entry x:Name="songNameEntry" Grid.Row="0" Grid.Column="1" Placeholder="Enter Song Title"/>
            <Label Grid.Row="1" Grid.Column="0" Text="Song Artist Title:"/>
            <Entry x:Name="artistNameEntry" Grid.Row="1" Grid.Column="1" Placeholder="Enter Artist Name" Margin="-50,0,0,0"/>
            <Label Grid.Row="2" Grid.Column="0" Text="Song Duration:"/>
            <Entry x:Name="durationEntry" Grid.Row="2" Grid.Column="1" Placeholder="Enter Song Duration" Margin="-50,0,0,0"/>
        </Grid>
        <Button Text="Edit" Clicked="AddSong"/>
    </VerticalStackLayout>
</ContentPage>