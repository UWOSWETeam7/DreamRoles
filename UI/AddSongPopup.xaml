<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:Prototypes" 
             x:Class="Prototypes.UI.AddSongPopup"
             Title="Add Song"
             BackgroundColor="#E1D6C9">
    <VerticalStackLayout>
        <Grid ColumnDefinitions="*,*">
            <Label Grid.Column="0" Text="Song Title:" VerticalOptions="Center" Margin="5,0,0,0"/>
            <Entry Grid.Column="1" x:Name="songNameEntry" Placeholder="Enter Song Title" Margin="-125,0,5,0" PlaceholderColor="DarkSlateGrey"/>
        </Grid>

        <Button Text="Add Song" Clicked="AddSong" BackgroundColor="#0E79A5"/>
    </VerticalStackLayout>
</ContentPage>