<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:Prototypes" 
             x:Class="Prototypes.UI.AddSongPopup"
             Title="Add Song">
    <VerticalStackLayout>
        <Grid ColumnDefinitions="*,*">
            <Label Grid.Column="0" Text="Song Title:" VerticalOptions="Center"/>
            <Entry Grid.Column="1" x:Name="songNameEntry" Placeholder="Enter Song Title" Margin="-130,0,0,0"/>
        </Grid>
        
        <Button Text="Add Song" Clicked="AddSong"/>
    </VerticalStackLayout>
</ContentPage>