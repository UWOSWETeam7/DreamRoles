<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prototypes.UI.AddPerformerPopup"
             Title="AddPerformerPopup">
    <VerticalStackLayout>
        <Grid RowDefinitions="*,*,*,*" ColumnDefinitions="*,2.5*">
            <Label Grid.Row="0" Grid.Column="0" Text="First Name:" VerticalOptions="Center"/>
            <Entry x:Name="firstNameEntry" Grid.Row="0" Grid.Column="1" Placeholder="Enter First Name" Margin="-30,0,0,0"/>
            <Label Grid.Row="1" Grid.Column="0" Text="Last Name:" VerticalOptions="Center"/>
            <Entry x:Name="lastNameEntry" Grid.Row="1" Grid.Column="1" Placeholder="Enter Last Name" Margin="-30,0,0,0"/>
            <Label Grid.Row="2" Grid.Column="0" Text="Phone Number:" VerticalOptions="Center"/>
            <Entry x:Name="phoneNumberEntry" Grid.Row="2" Grid.Column="1" Placeholder="Enter PhoneNumber"/>
            <Label Grid.Row="3" Grid.Column="0" Text="Email:" VerticalOptions="Center"/>
            <Entry x:Name="emailEntry" Grid.Row="3" Grid.Column="1" Placeholder="Enter Email" Margin="-65,0,0,0"/>
        </Grid>
        <Button Text="Add Performer" Clicked="AddPerformer"/>
    </VerticalStackLayout>
</ContentPage>