<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prototypes.UI.EditPerformerNamePopup"
             Title="Edit Performer Name"
             BackgroundColor="#E1D6C9">
    <VerticalStackLayout>
        <Grid RowDefinitions="*,*" ColumnDefinitions="*,2.5*">
            <Label Grid.Row="0" Grid.Column="0" Text="First Name:" Margin="5,15,0,0"/>
            <Entry x:Name="firstNameEntry" Grid.Row="0" Grid.Column="1" Placeholder="Enter First Name" PlaceholderColor="DarkSlateGrey" Margin="-30,0,5,0"/>
            <Label Grid.Row="1" Grid.Column="0" Text="Last Name:" Margin="5,15,0,0"/>
            <Entry x:Name="lastNameEntry" Grid.Row="1" Grid.Column="1" Placeholder="Enter Last Name" PlaceholderColor="DarkSlateGrey" Margin="-30,0,5,0"/>
        </Grid>
        <Button Text="Edit" Clicked="EditPerformerName" BackgroundColor="#0E79A5"
/>
    </VerticalStackLayout>
</ContentPage>